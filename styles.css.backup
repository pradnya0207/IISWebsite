/* This is a backup of the original styles.css file */
/* General & Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Color Variables */
:root {
    --primary: #4f46e5;
    --primary-dark: #4338ca;
    --primary-light: #818cf8;
    --primary-xlight: #e0e7ff;
    --secondary: #f97316;
    --secondary-dark: #ea580c;
    --secondary-light: #fb923c;
    --accent: #ec4899;
    --accent-light: #f472b6;
    --dark: #334155;
    --darker: #1e293b;
    --light: #f1f5f9;
    --lighter: #ffffff;
    --gray: #94a3b8;
    --gray-light: #e2e8f0;
    --success: #10b981;
    --danger: #ef4444;
    --warning: #f59e0b;
    --info: #0ea5e9;
    
    /* Additional variables for form elements */
    --border-radius: 16px;
    --box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.05);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Base Styles */
body {
    font-family: 'Poppins', sans-serif;
    line-height: 1.7;
    color: var(--dark);
    background-color: var(--light);
    overflow-x: hidden;
    scroll-behavior: smooth;
    font-size: 16px;
}

